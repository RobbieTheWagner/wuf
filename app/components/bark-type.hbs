<div class="flex flex-col flex-grow w-full">
  <h2 class="font-semibold mb-2 text-2xl text-heading">
    Results
  </h2>

  <AnimatedContainer class="bg-gray-100 flex p-4 h-80 mb-8 rounded w-full">
    <div class="flex h-full items-center justify-center w-full">
      {{#animated-if @barkType use=this.fade duration=1000}}
        <div class="mr-4">
          {{svg-jar @barkType height="200" width="200"}}
        </div>
        <div class="flex-grow">
          <h2 class="font-bold text-3xl">
            {{capitalize @barkType}}
          </h2>

          <p>
            {{@barkDescription}}
          </p>
        </div>
      {{else}}
        <div class="flex flex-col items-center justify-center h-full w-full">
          {{svg-jar "dig-in" height="200" width="200"}}

          <h4 class="font-black text-center text-heading text-xl">
            We can't wait to dig into your dog's barking data!
          </h4>

          <p class="italic mt-1 text-sm">
            No data uploaded yet.
          </p>
        </div>
      {{/animated-if}}
    </div>
  </AnimatedContainer>
</div>